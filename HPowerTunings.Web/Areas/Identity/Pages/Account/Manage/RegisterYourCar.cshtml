@page
@model RegCarModel

    <style>
        body {
            background-color: rgb(240, 240, 230)
        }
    </style>

<div class="text-center mt-3">
    <div class="container-fluid justify-content-center"></div>
    <h4><strong>Register your car</strong></h4>
    <hr class="w-50"/>
</div>
<div class="container-fluid justify-content-center w-50">
    <form id="register-car-form" method="post">
        <select class="custom-select" id="CarBrand" name="carBrand">
            <option selected disabled>-- Choose Car Brand --</option>
            @foreach (var item in Model.Input.CarBrands)
            {
                <option>@item</option>
            }
        </select>
        <div class="button-holder mt-4 d-flex justify-content-center">
            <button id="btnSubmit" type="submit" class="btn btn-outline-primary">Select Brand</button>
        </div>
    </form>
</div>
<br />
<h4 class="text-center">View my car(s)</h4>
<hr class="w-50" />
<br />
<div class="text-center">
    @foreach (var item in Model.Input.ClientCars)
    {
    <p><a href="/Car/Details/@item.Id"><h4>@item.CarBrand &nbsp;-&nbsp; @item.CarModel</h4></a></p>
    }
</div>


@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container-fluid w-75">
    <h4 class="text-center">@ViewData["Title"]</h4>
    <br />
    <div class="delete-personal-data alert alert-warning" role="alert">
        <p>
            <span class="glyphicon btn-outline-light"></span>
            <div>
               <strong>We are sorry to see you leaving! This will permanently remove your stored personal data and your account.
               </strong>
            </div>
        </p>
    </div>
    <br />
    <div>
        <form id="delete-user" method="post" class="form-group container-fluid w-50">
            @if (Model.RequirePassword)
            {
                <div class="form-group text-black-50 text-center">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <div class="button-holder mt-4 d-flex justify-content-center">
                <button class="btn btn-danger" type="submit">Delete my account</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<style>
    body {
        background-color: rgb(240, 240, 232)
    }
</style>

<div class="container-fluid" style="width:440px">
    <h4 class="text-center"><strong>@ViewData["Title"]</strong></h4>
    <br />
    <div class="delete-personal-data alert alert-warning" role="alert" style="padding-left:40px">
        <p>
            <div>
                <h5>
                    We are sorry to see you leaving! This will permanently remove your stored personal data and your account.
                </h5>
            </div>
        </p>
    </div>
    <br />
    <div>
        <form id="delete-user" method="post" class="form-group container-fluid">
            @if (Model.RequirePassword)
            {
            <div class="form-group text-black-50 text-center">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            }
            <div class="button-holder mt-4 d-flex justify-content-center">
                <button class="btnDeleteAccount btn btn-danger" type="submit">Delete my account</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

    <style>
        body {
            background-color: rgb(240, 240, 232)
        }
    </style>

    <div class="container-fluid justify-content-center text-center" style="background-color:cadetblue; opacity:0.9;
     padding-bottom:10px; padding-left:10px; padding-right:10px; padding-top:10px; width:370px; border-radius:6px">
        <h4 class="text-center"><strong>@ViewData["Title"]</strong></h4>
    </div>
    <br />
    <div class="container-fluid justify-content-center" style="max-width:400px">

        <p>Your account contains personal data that you have provided to us. This page allows you to download or delete that data.</p>
        <p>
            <strong style="color:brown">Deleting this data will permanently remove your account.</strong>
        </p>
        <br />
        <br />
        <div class="d-flex container-fluid justify-content-center">
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="button-holder">
                <button class="btn btn-outline-primary" type="submit" style="margin-right:31px">Download data</button>
            </form>
            <div class="button-holder" style="margin-left:31px">
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-primary">Delete account</a>
            </div>
        </div>

    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
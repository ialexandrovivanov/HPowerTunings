@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

    <style>
        body {
            background-color: rgb(240, 240, 232)
        }
    </style>

    
    <div class="container-fluid justify-content-center" style="max-width:400px;
         padding:20px; background-color:lightgray; opacity:0.7; border-radius:6px;">
        <div class="d-flex" style="margin-bottom:30px">
            <h4>Personal Data</h4>
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="button-holder"
                  style="margin-left:100px">
                <button class="btn btn-outline-primary" type="submit">Download</button>
            </form>
        </div>
        <p>Your account contains personal data that you have provided to us. This page allows you to download or delete that data.</p>
        <p>
            <strong style="color:brown">Deleting this data will permanently remove your account.</strong>
        </p>
        <br />
        <br />
        <div class="button-holder container-fluid text-center">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-light">Delete data</a>
        </div>

    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

    <style>
        body {
            background-color: rgb(240, 240, 232)
        }
    </style>

<div class="container-fluid justify-content-center" style="width:400px">
    <div class="container-fluid justify-content-center text-center" style="background-color:cadetblue; opacity:0.9;
     padding-bottom:10px; padding-left:10px; padding-right:10px; padding-top:10px; width:370px; border-radius:8px">
        <h4 class="text-center"><strong>@ViewData["Title"]</strong></h4>
    </div>
    <br />
    <p>Your account contains personal data that you have provided to us. This page allows you to download or delete that data.</p>
    <p>
        <strong style="color:brown">Deleting this data will permanently remove your account.</strong>
    </p>
    <br />
    <form id="download-data" asp-page="DownloadPersonalData" method="post" class="button-holder d-flex justify-content-center">
        <button class="btn btn-outline-primary" type="submit">Download data</button>
    </form>
    <br />
    <div class="button-holder mt-4 d-flex justify-content-center">
        <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-primary">Delete account</a>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    body {
        background-color: rgb(240, 240, 232)
    }
</style>
<h4 class="text-center"><strong>@ViewData["Title"]</strong></h4>
<hr  class="w-50"/>
<div class="container-fluid justify-content-center w-50" style="width:400px">
    <form id="profile-form" method="post">
        <div class="form-group">
            <label asp-for="Input.UserName">Change Username</label>
            <input asp-for="Input.UserName" class="form-control" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Input.PhoneNumber">Insert or change your phone number</label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="button-holder mt-5 d-flex justify-content-center">
            <button id="update-profile-button" type="submit" class=" btnProfile btn btn-outline-primary">Update Account</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model RegisterModel

<head>
    <style>
        body {
            background-color: rgb(240, 246, 240)
        }
    </style>
</head>

<div style="padding-top:100px"></div>
<section class="container-fluid justify-content-center" style="max-width:420px;
                 padding:20px; background-color:lightgray; opacity:0.7; border-radius:6px;">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="d-flex" style="margin-bottom:20px">
            <h3 c>Register</h3>
            <div class="button-holder" style="margin-left: auto">
                <button type="submit" class="btn btn-outline-primary">Register</button>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.UserName"></label>
            <input asp-for="Input.UserName" class="form-control" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" style="color:indigo"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </form>
    <div class="spinner" style="display:none">
        <div class="center-div">
            <div class="inner-div">
                <div class="loader"></div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

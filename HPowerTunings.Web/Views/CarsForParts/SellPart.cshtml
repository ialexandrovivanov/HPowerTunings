@using HPowerTunings.ViewModels.PartsFromCar
@model SellPartViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(window).on('load', function () {
        $('#rate-part').modal('show');
    });
</script>



<div class="modal fade" id="rate-part" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header"  style="background-color:gainsboro">
                <h4 class="modal-title container-fluid text-center" id="addContactLabel">Sell a part</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" style="background-color:ivory;">
                <form class="text-center" id="RatePart" action="/PartsFromCar/CreatePart" method="post">
                    <div class="container-fluid justify-content-center">
                        <label>Part name</label>
                        <input asp-for="@Model.Name" class="form-control">
                        <label>Part price</label>
                        <input asp-for="@Model.Price" class="form-control" />
                        <label>Description</label>
                        <input asp-for="@Model.Description" class="form-control" />
                        <input asp-for="@Model.CarForPartsId" class="form-control" type="hidden" value="@Model.CarForPartsId" />
                        <button type="submit" class="btn btn-outline-primary" style="margin-top:30px; opacity:0.7">&nbsp;Submit&nbsp;</button>
                    </div>
                </form>
                <div class="container-fluid justify-content-center text-center"
                     style="margin-top:40px; padding:10px; border-radius:6px; background-color:gainsboro;">
                    <button class="btn btn-light" style="opacity:0.9" onClick="location.href='/CarsForParts/Index'">&nbsp; Return &nbsp;</button>
                </div>
            </div>
        </div>
    </div>
</div>
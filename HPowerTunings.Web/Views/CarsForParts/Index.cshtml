@using HPowerTunings.ViewModels.CarsForParts
@model CarsForPartsMainViewModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(240, 246, 240)
        }
    </style>
</head>
<body>
    <div class="text-center mt-5 pt-5">
        <h3>Cars for parts</h3>
    </div>
    <div class="d-flex" style="max-width:600px; margin-top:20px">
        <div class="mt-3">
            <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                    data-target="#add-car" style="margin-right:30px; opacity:0.6">
                Add new car
            </button>

            <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                    data-target="#delete-car" style="margin-left: 30px;  opacity:0.6">
                Delete a car
            </button>
        </div>
    </div>
    <p style="margin-top:40px"></p>
    @foreach (var car in Model.Cars)
    {
        <div class="container-fluid justify-content-center" style="padding:10px; max-width:600px; border-radius:6px;
             background-color:darkgrey">
            <div class="d-flex">
                <div>
                    <h5 class="text-center">Car brand : <strong style="color:indigo">@car.CarBrand</strong></h5>
                </div>
                <a href="/CarsForParts/SellPart?id=@car.Id" style=" float:right; margin-left: 28%; 
                   opacity:0.7;">
                    <button> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Sell part&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
                </a>

            </div>
            <h5>Car model : <strong style="color:indigo">@car.CarModel</strong></h5>
            <p>Vin : <strong>@car.Rama</strong></p>

            @foreach (var part in car.Parts)
            {
                <div class="container-fluid " style="padding:5px; max-width:580px; opacity:0.8;
                     background-color:beige; border-radius:6px;">
                    <h5 class="text-center" style="color:indigo"><strong>Part</strong></h5>
                    <p>Part name: <strong>@part.Name</strong></p>
                    <p>Part price: <strong>@part.Price</strong></p>
                    <p>Saled on: <strong>@part.SaledOn.Value.ToString("dd-MM-yy")</strong></p>
                </div>
                <p></p>
            }
            @{ var total = car.Parts.Sum(pp => pp.Price); }
            @if (car.Price - total <= 0)
            {
                <div class="container-fluid justify-content-center text-center" style="color:white;
             background-color:darkslategrey; max-width:580px; border-radius:6px; padding:5px;">
                    <p>Car price : <strong>@car.Price</strong></p>
                    <p>Sales on parts : <strong>@total.ToString("F2")</strong></p>
                    <p>Total parts saled: <strong>@car.Parts.Count()</strong></p>
                </div>
            }
            else
            {
                <div class="container-fluid justify-content-center text-center" style="color:white; border-radius:6px; padding:5px;
             background-color:indianred; max-width:580px">
                    <p>Car price : <strong>@car.Price</strong></p>
                    <p>Sales on parts : <strong>@car.Parts.Sum(p => p.Price).ToString("F2")</strong></p>
                    <p>Total parts saled: <strong>@car.Parts.Count()</strong></p>
                </div>
            }


        </div>
        <p></p>
    }
    <div style="margin-bottom:60px"></div>


    @* --Modal add-- *@
    <div class="modal fade" id="add-car" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addContactLabel">Add new car for parts</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @*<form class="text-center" id="createCar" action="/carsforparts/createEmployee" method="post">
                            <div>
                                <label style=" font-size: 20px">Full name</label>
                                <input asp-for="" class="form-control" placeholder="Full name">
                                <span asp-validation-for="" class="text-danger"></span>
                            </div>

                            <input asp-for="" type="hidden">
                            <input asp-for="" type="hidden">
                            <div class="button-holder mt-5">
                                <button type="submit" class="btn btn-outline-primary"> Register </button>
                            </div>
                        </form>*@
                </div>
            </div>
        </div>
    </div>

    @* --Modal delete-- *@
    <div class="modal fade" id="delete-car" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addContactLabel">Delete car</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @*<form class="text-center" id="createEmployee" action="/employee/createEmployee" method="post">
                            <div>
                                <label style=" font-size: 20px">Full name</label>
                                <input asp-for="" class="form-control" placeholder="Full name">
                                <span asp-validation-for="" class="text-danger"></span>
                            </div>

                            <input asp-for="" type="hidden">
                            <input asp-for="" type="hidden">
                            <div class="button-holder mt-5">
                                <button type="submit" class="btn btn-outline-primary"> Register </button>
                            </div>
                        </form>*@

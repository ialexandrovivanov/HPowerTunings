@using HPowerTunings.ViewModels.CarsForParts
@model  CreateCarViewModel
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

<script type="text/javascript">
    $(window).on('load', function () {
        $('#add-car').modal('show');
    });
</script>

@* --Modal add-- *@
<div class="modal fade" id="add-car" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body" style="padding-bottom:30px; background-color:beige; border-radius:6px">
                <form class="container-fluid text-center" id="createCar" action="/carsforparts/createcar" method="post" style="max-width:600px">
                    <div class="d-flex" style="margin-bottom:30px">
                        <div>
                            <h4 class="modal-title" id="addContactLabel">Add new car for parts</h4>
                        </div>
                        <a class="button-holder" href="/CarsForParts/Index" style="margin-left:auto;">
                            <button type="button" class="btn btn-secondary" style="opacity:0.7; padding-left:16px">&nbsp;Return&nbsp;</button>
                        </a>
                    </div>
                    <div class="d-flex" style="margin-bottom:20px">
                        <div class="button-holder" style="margin-left:auto;">
                            <button type="submit" class="btn btn-outline-primary" style="opacity:0.7; margin-left:auto">Register</button>
                        </div>
                    </div>
                    <div>
                        <label>Car brand</label>
                        <select class="custom-select" id="CarModel" asp-for="@Model.CarBrand">
                            <option selected disabled>-- Choose car brand --</option>
                            @foreach (var item in Model.AllBrands as List<string>)
                            {
                                <option>@item</option>
                            }
                        </select>
                    </div>
                    <p></p>
                    <div>
                        <label>Car model</label>
                        <select class="custom-select" id="CarModel" asp-for="@Model.CarModel">
                            <option selected disabled>-- Choose Model --</option>
                            @foreach (var item in Model.AllModels as List<string>)
                            {
                                <option>@item</option>
                            }
                        </select>
                    </div>
                    <p></p>
                    <div>
                        <label>Reg number</label>
                        <input asp-for="@Model.RegNumber" class="form-control">
                        <span asp-validation-for="@Model.RegNumber" class="text-danger"></span>
                    </div>
                    <p></p>
                    <div>
                        <label>Vin number</label>
                        <input asp-for="@Model.Rama" class="form-control">
                        <span asp-validation-for="@Model.Rama" class="text-danger"></span>
                    </div>
                    <p></p>
                    <div>
                        <label style="color:indigo">Color</label>
                        <input asp-for="@Model.Color" class="form-control">
                        <span asp-validation-for="@Model.Color" class="text-danger"></span>
                    </div>
                    <p></p>
                    <div>
                        <label>Initial price</label>
                        <input asp-for="@Model.Price" class="form-control">
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

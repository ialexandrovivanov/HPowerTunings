
@{
    ViewData["Title"] = "SuccessDeleteCar";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

    <body>
        <script type="text/javascript">
        $(window).on('load', function () {
            $('#success-delete').modal('show');
        });

        </script>

        <div class="modal fade" id="success-delete" tabindex="-1" role="dialog" aria-labelledby="addContactLabel"
             aria-hidden="false">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="padding:40px; background-color:rgba(240,240,232,.6);
             color:white; margin-top:100px; border-radius:8px;">
                    <div class="modal-body">
                        <h5 class="container-fluid text-center" style="opacity:0.7; color:black;">
                            This car is successfully deleted
                        </h5>
                        <div class="container-fluid justify-content-center text-center" style="margin-top:40px">
                            <button class="btn btn-secondary" onClick="location.href='/CarsForParts/Index'">
                                Return
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>


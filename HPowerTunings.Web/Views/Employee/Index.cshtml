@using HPowerTunings.ViewModels.EmployeeModels
@model EmployeeStartEndStatisticsViewModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(238, 244, 230)
        }
    </style>
</head>
<body>
    <div class="text-center mt-5 pt-5"  style="margin-bottom:30px">
        <h3  style="margin-bottom:30px">Employee management page</h3>
        @foreach (var item in ViewData["Errors"] as List<string>)
        {
            <div class="text-center">
                <p style="color:mediumvioletred">@item</p>
            </div>
        }
        <div class="d-flex" style="padding:40px; background-color:ivory; border-radius:6px; border:solid 1px #c7c8a6">
             <div>
            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#hire-employee" 
                    style="margin-right:110px; opacity:0.7">
                Hire Employee
            </button>
        </div>
        <div>
            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#fire-employee" 
                    style="opacity:0.7">
                Fire Employee
            </button>
        </div>
        </div>
    </div>
    <form class="container-fluid justify-content-center" style="max-width:460px; padding-bottom:100px" 
          action="/Employee/EmployeeStatistics" method="post">
        <div class="d-flex">
            <h5>Employee statistics</h5>
            <div style="margin-left:95px">
                <button type="submit" class=" btn btn-outline-primary" style="opacity:0.7">Select &nbsp;period&nbsp;</button>
            </div>
        </div>
        <div class="text-center mt-3">
            <label>Start date (including)</label>
            <input type="date" asp-for=@Model.StartDate class="form-control" />
            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
        </div>
        <div class="text-center mt-5">
            <label>End date (including)</label>
            <input type="date" asp-for=@Model.EndDate class="form-control" />
            <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
        </div>
        
    </form>

    <!-- Modal Hire -->
    <div class="modal fade" id="hire-employee" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addContactLabel">Register Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="text-center" id="createEmployee" action="/employee/createEmployee" method="post">
                        <div>
                            <label style=" font-size: 20px">Full name</label>
                            <input asp-for="@Model.RegisterEmployee.FullName" class="form-control" placeholder="Full name">
                            <span asp-validation-for="@Model.RegisterEmployee.FullName" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <label style="font-family:Arial; font-size: 20px" ;>Email</label>
                            <input asp-for="@Model.RegisterEmployee.Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="@Model.RegisterEmployee.Email" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <label style="font-family:Arial; font-size: 20px">Address</label>
                            <input asp-for="@Model.RegisterEmployee.Address" class="form-control" placeholder="Address">
                            <span asp-validation-for="@Model.RegisterEmployee.Address" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <label style="font-family:Arial; font-size: 20px">Phone number</label>
                            <input asp-for="@Model.RegisterEmployee.PhoneNumber" class="form-control" placeholder="Phone">
                            <span asp-validation-for="@Model.RegisterEmployee.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <label style="font-family:Arial; font-size: 20px">Possition</label>
                            <input asp-for="@Model.RegisterEmployee.Possition" class="form-control" placeholder="Possition">
                            <span asp-validation-for="@Model.RegisterEmployee.Possition" class="text-danger"></span>
                        </div>
                        <input asp-for="@Model.StartDate" type="hidden">
                        <input asp-for="@Model.EndDate" type="hidden">
                        <div class="button-holder mt-5">
                            <button type="submit" class="btn btn-outline-primary"> Register </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Fire -->
    <div class="modal fade" id="fire-employee" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addContactLabel">Fire employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="text-center" id="createEmployee" action="/employee/deleteEmployee" method="post">
                        <div>
                            <label style=" font-size: 20px" ;>Full name</label>
                            <input asp-for="@Model.DeleteEmployee.EmployeeFullName" class="form-control" placeholder="Full name">
                            <span asp-validation-for="@Model.DeleteEmployee.EmployeeFullName" class="text-danger"></span>
                            <p></p>
                            <label style="font-size: 20px">Password</label>
                            <input asp-for="@Model.DeleteEmployee.Password" class="form-control" placeholder="Admin password">
                            <span asp-validation-for="@Model.DeleteEmployee.Password" class="text-danger"></span>
                        </div>
                        <div class="button-holder mt-5">
                            <button type="submit" class="btn btn-outline-primary"> Delete employee </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
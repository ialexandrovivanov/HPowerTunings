        marker = new google.maps.Marker({ map: map, position: new google.maps.LatLng(42.651537, 23.219843) });
        infowindow = new google.maps.InfoWindow({ content: '<strong>HPowerTunings Car Service</strong><br>Sofia<br>' });
        google.maps.event.addListener(marker, 'click', function () {
            infowindow.open(map, marker);
        });
        infowindow.open(map, marker);
    }
    google.maps.event.addDomListener(window, 'load', init_map);
</script>

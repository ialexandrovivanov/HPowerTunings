@using HPowerTunings.ViewModels.ClientModels
@model ClientStartEndOutputModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(240, 238, 224)
        }
    </style>
</head>
<body>
    <div class="container-fluid justify-content-center text-center mt-5 pt-5" style="max-width:400px">
        <h3>Clients management page</h3>

        <div class="mt-4">
            <form action="/client/admincreateclient" method="get" style="padding-bottom:20px">
                <button class="btn btn-outline-primary mt-3">Create client</button>
            </form>
        </div>

        <form  action="/client/clientstartendstatistics" method="post">

            <div class="text-center mt-5">
                <label>Start date (including)</label>
                <input type="date" asp-for=@Model.StartDate class="form-control" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div class="text-center mt-5">
                <label>End date (including)</label>
                <input type="date" asp-for=@Model.EndDate class="form-control" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for=@Model.RegisterClient.Email class="form-control" value="pesho@gmail.com" />
                <input type="hidden" asp-for=@Model.RegisterClient.UserName class="form-control" value="pesho" />
            </div>
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-outline-primary">Select period</button>
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

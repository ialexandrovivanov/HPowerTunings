@using HPowerTunings.ViewModels.ClientModels
@model AdminRegisterClientOutputModel
@{ Layout = "_LayoutBoss";}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(220, 220, 220);
        }
    </style>
</head>
<body>
    <div class="container-fluid justify-content-center" style="max-width:420px;
                 padding:20px; background-color:cornsilk; opacity:0.7; border-radius:6px; margin-top:100px">
        <form id="AdminCreateClient" action="/Client/AdminCreateClient" method="post"
              class="form-group mt-3 container-fluid justify-content-center text-center" style="max-width:400px">
            <div class="d-flex" style="margin-bottom:20px">
                <h3>Create client</h3>
                <button type="submit" class="btn btn-outline-primary" style="margin-left: auto">Create</button>
            </div>
            <label>Email</label>
            <input asp-for="@Model.Email" class="form-control" placeholder="Email">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <div class="mt-4"></div>
            <label>Username</label>
            <input asp-for="@Model.UserName" class="form-control" placeholder="Username">
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <div class="mt-4"></div>
            <label style="color:indigo">Phone number</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone number">
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            <div class="mt-4"></div>
        </form>
    </div>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

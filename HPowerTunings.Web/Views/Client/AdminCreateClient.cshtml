@using HPowerTunings.ViewModels.ClientModels
@model AdminRegisterClientOutputModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h3 class="pt-5">Create client</h3>
    <form id="AdminCreateClient" action="/Client/AdminCreateClient" method="post"
          class="form-group mt-3 container-fluid justify-content-center text-center w-25">
        <label>Email</label>
        <input asp-for="@Model.Email" class="form-control" placeholder="Reg.number">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>

        <label>Username</label>
        <input asp-for="@Model.UserName" class="form-control" placeholder="Reg.number">
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>

        <label>Phone number</label>
        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Reg.number">
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>

        <div class="button-holder mt-4">
            <button type="submit" class="btn btn-outline-primary">Create client</button>
        </div>
    </form>
</body>
</html>
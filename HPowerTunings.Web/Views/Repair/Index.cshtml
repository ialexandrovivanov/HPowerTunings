@using HPowerTunings.ViewModels.RepairModels
@model RepairStartEndDateViewModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(255, 249, 227)
        }
    </style>
</head>
<body>
    <form action="/repair/repairStartEnd" method="post" class="w-25">
        <div class="text-center mt-5">
            <h3>Select repairs for choosen period of time</h3>
            <hr />
        </div>
        <div class="text-center mt-5">
            <label>Start date (including)</label>
            <input type="date" asp-for=@Model.StartDate class="form-control" />
            <span asp-validation-for=@Model.StartDate class="text-danger"></span>
        </div>
        <div class="text-center mt-5">
            <label>End date (including)</label>
            <input type="date" asp-for=@Model.EndDate class="form-control" />
            <span asp-validation-for=@Model.EndDate class="text-danger"></span>
        </div>
        <div class="text-center mt-5">
            <button type="submit" class="btn btn-outline-primary">Select repairs</button>
        </div>
    </form>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

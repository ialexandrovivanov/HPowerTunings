@using HPowerTunings.ViewModels.RepairModels
@model RepairStartEndDateViewModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(238, 244, 230)
        }
    </style>

</head>
<body>
    <div class="container-fluid justify-content-center text-center mt-5 pt-5" style="max-width:500px">
        <h3>Repairs management page</h3>
        <div class="container-fluid justify-content-center text-center mt-4" 
             style="padding:20px; border-radius:6px; background-color:darkcyan">
            <form action="/repair/createrepair" method="get" style="padding-bottom:20px">
                <button class="btn btn-outline-light mt-3" style="opacity:0.9">Start a repair</button>
            </form>
        </div>
        <p style="padding:10px"></p>
        <div style="padding:20px; padding-bottom:30px; padding-top:1px; border-radius:6px; background-color:aliceblue; border:solid 1px rgb(220, 220, 220)">
            <form action="/repair/repairStartEnd" method="post">
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-outline-primary" style="opacity:0.7">Select period</button>
                </div>
                <div class="text-center mt-5">
                    <label>Start date (including)</label>
                    <input type="date" asp-for=@Model.StartDate class="form-control" />
                    <span asp-validation-for=@Model.StartDate class="text-danger"></span>
                </div>
                <div class="text-center mt-5">
                    <label>End date (including)</label>
                    <input type="date" asp-for=@Model.EndDate class="form-control" />
                    <span asp-validation-for=@Model.EndDate class="text-danger"></span>
                </div>
            </form>
        </div>
    </div> 
    
   
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

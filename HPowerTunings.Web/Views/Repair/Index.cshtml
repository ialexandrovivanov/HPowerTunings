@using HPowerTunings.ViewModels.RepairModels
@model RepairStartEndDateViewModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(238, 244, 230)
        }
    </style>

</head>
<body>
    <div class="container-fluid justify-content-center text-center" style="width:400px">
        <form action="/repair/repairStartEnd" method="post">
            <div class="text-center mt-5 pt-5">
                <h3>Select period of time for repairs statistics</h3>
                <hr />
            </div>
            <div class="text-center mt-5">
                <label>Start date (including)</label>
                <input type="date" asp-for=@Model.StartDate class="form-control" />
                <span asp-validation-for=@Model.StartDate class="text-danger"></span>
            </div>
            <div class="text-center mt-5">
                <label>End date (including)</label>
                <input type="date" asp-for=@Model.EndDate class="form-control" />
                <span asp-validation-for=@Model.EndDate class="text-danger"></span>
            </div>
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-outline-primary">Select period</button>
            </div>
        </form>
    </div> 
    
    <div class="container-fluid justify-content-center text-center mt-3" style="width:400px">
        <form action="/repair/createrepair" method="get">
            <hr />
            <button class="btn btn-outline-primary mt-3">Create repair</button>
        </form>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

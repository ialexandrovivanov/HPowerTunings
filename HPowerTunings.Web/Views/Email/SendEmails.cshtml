@{
    ViewData["Title"] = "SendEmails";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

<style>
    body {
        background-color: rgba(210, 230, 240, 0.6)
    }
</style>

<body>
    <script type="text/javascript">
        $(window).on('load', function () {
            $('#success-part').modal('show');
        });
    </script>

    <div class="modal fade" id="success-part" tabindex="-1" role="dialog" aria-labelledby="addContactLabel"
         aria-hidden="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="padding:40px; background-color:ivory;
             color:white; margin-top:100px; border-radius:8px;">
                <div class="modal-body">
                    <h5 class="container-fluid text-center" style="opacity:0.7; color:black;">
                        All emails are sent successfully
                    </h5>
                    <div class="container-fluid justify-content-center text-center" style="margin-top:40px">
                        <button class="btn btn-secondary" onClick="location.href='/Email'">
                            Return
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


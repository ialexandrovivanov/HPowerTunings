@using HPowerTunings.ViewModels.CarModels
@model DeleteYourCarModel

<style>
    body {
        background-color: rgb(240, 240, 232)
    }
</style>

<div class="container-fluid justify-content-center text-center pt-5 mt-5" style="width:600px">
    <h3>Delete your car</h3>
    <hr />
    <div class="delete-personal-data alert alert-warning" role="alert">
        <p>
            <span class="glyphicon btn-outline-light"></span>
            <div>
                <strong>This will permanently remove this <span style="font-size:20px; color:saddlebrown">@ViewData["CarBrand"] - @ViewData["CarModel"]</span> from the system</strong>
            </div>
        </p>
    </div>
    <form action="/car/deleteyourcar" method="post" class="container-fluid form-group pt-4">
        <label>Insert your password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for=@Model.Password class="text-danger"></span>
        <input asp-for="CarBrand" />
        <input asp-for="CarModel" />
        <input asp-for="CarId" />
        <div>
            <div class="button-holder mt-4 d-flex justify-content-center">
                <button type="submit" class="deleteSubmit btn btn-danger">Delete this car</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
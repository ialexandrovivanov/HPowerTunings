@using HPowerTunings.ViewModels.CarModels
@model DeleteYourCarModel

<style>
    body {
        background-color: rgb(240, 240, 232)
    }
</style>

<div class="container-fluid justify-content-center text-center pt-5 mt-5" style="max-width:600px">
    <h3>Delete your car</h3>
    <div>
        <p>
            <span class="glyphicon btn-outline-light" style="border-radius:6px; padding:20px"></span>
            <div>
                <h5>
                    You will permanently remove this <span style="font-size:18px; color:indigo   ">
                        <strong>@ViewData["CarBrand"] - @ViewData["CarModel"]</strong>
                    </span> from the system
                </h5>
            </div>
        </p>
    </div>
    <form class="deleteCarForm mt-5" action="/car/deleteyourcar" method="post">
        <label>Insert your password</label>
        <input asp-for="Password" class="form-control container-fluid" style="width:300px" />
        <span asp-validation-for=@Model.Password style="color:chocolate"></span>
        <input asp-for="CarBrandName" />
        <input asp-for="CarModelName" />
        <input asp-for="Id" />
        <div>
            <div class="button-holder pt-5 justify-content-center">
                <button type="submit" class="btn btn-outline-danger">Delete this car</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
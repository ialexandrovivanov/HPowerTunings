@using HPowerTunings.ViewModels.CarModels
@model CarStartEndDateViewModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(238, 244, 240)
        }
    </style>
</head>
<body>
    <div class="container-fluid justify-content-center mt-5 pt-5" style="max-width:500px">
        <h3 class="text-center">Cars management page</h3>
        <div  class="container-fluid justify-content-center text-center mt-4" 
             style="padding:20px; border-radius:6px; background-color:dimgrey; opacity:0.9">
            <form action="/car/AdminCreateCar" method="get" style="padding-bottom:20px; opacity:0.9">
                <button class="btn btn-outline-light mt-3" style="color:lightgrey">&nbsp;Create a car&nbsp;</button>
            </form>
        </div>
        <p style="padding:10px;"></p>
        <div  style="padding:20px; padding-bottom:30px; border-radius:6px; 
              background-color:azure; border:solid 1px rgb(220, 220, 220)">
            <form action="/Car/CarStatisticStartEnd" method="post">
                <div class="text-center mt-4">
                    <button type="submit" name="submit" value="all" class="btn btn-outline-primary" style="opacity:0.7; margin-right:40px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;All Cars&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
                    <button type="submit" name="submit" value="period" class="btn btn-outline-primary" style="opacity:0.7; margin-left: 40px">Select period</button>
                </div>
                <div class="text-center mt-5">
                    <label>Start date (including)</label>
                    <input type="date" asp-for=@Model.StartDate class="form-control" />
                </div>
                <div class="text-center mt-5">
                    <label>End date (including)</label>
                    <input type="date" asp-for=@Model.EndDate class="form-control" />
                </div>

            </form>
        </div>
        
    </div>
</body>
</html>



@using HPowerTunings.ViewModels.CarModels
@model CarStartEndDateViewModel
@{ Layout = "_LayoutBoss";}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(238, 244, 240)
        }
    </style>
</head>
<body>
    <div class="container-fluid justify-content-center text-center text-center mt-5 pt-5" style="max-width:400px">
        <h3>Cars management page</h3>
        <hr style="max-width:360px" />
        <div class="mt-4" style="max-width:400px;">
            <form action="/car/AdminCreateCar" method="get" style="padding-bottom:20px">
                <button class="btn btn-outline-primary mt-3">Create &nbsp;a&nbsp; car</button>
            </form>
            <hr style="max-width:360px" />
        </div>

        <form action="/Car/CarStatisticStartEnd" method="post">
            <div class="text-center mt-5">
                <label>Start date (including)</label>
                <input type="date" asp-for=@Model.StartDate class="form-control" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div class="text-center mt-5">
                <label>End date (including)</label>
                <input type="date" asp-for=@Model.EndDate class="form-control" />
                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
            </div>
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-outline-primary">Select period</button>
            </div>
        </form>
    </div>


</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



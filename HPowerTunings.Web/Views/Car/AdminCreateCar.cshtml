@using  HPowerTunings.ViewModels.CarModels
@model AdminCreateCarOutputModel
@{
    ViewData["Title"] = "AdminCreateCar";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(242, 242, 232)
        }
    </style>
</head>

<body>
    <div style="padding:60px"></div>
    <div class="container-fluid justify-content-center" style="max-width:400px;
                 padding:20px; background-color:lightgray; opacity:0.7; border-radius:6px;">
        <form id="Car" action="/Car/AdminCreateCar" method="post">
            <div class="d-flex" style="padding-bottom:20px">
                <h3 >Add new car</h3>
                <div class="button-holder" style="margin-left:120px">
                    <button type="submit" class="btn btn-outline-primary">Create</button>
                </div>
            </div>
            <div class="text-center">
                <label>Select reg.number</label>
                <input asp-for="@Model.RegNumber" class="form-control" placeholder="Reg.number">
                <span asp-validation-for="@Model.RegNumber" class="text-danger"></span>
            </div>

            <div class="mt-5 mb-2 text-center">
                <label>Select car brand</label>
                <select asp-for="@Model.CarBrand" class="form-control">
                    <option selected disabled>-- Select car brand --</option>
                    @foreach (var item in Model.CarBrands)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
        </form>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>



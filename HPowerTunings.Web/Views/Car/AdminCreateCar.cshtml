@using  HPowerTunings.ViewModels.CarModels
@model AdminCreateCarOutputModel
@{
    ViewData["Title"] = "AdminCreateCar";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(242, 242, 232)
        }
    </style>
</head>

<body>
    <div class="text-center pt-5 mt-5 w-100">
        <h3>Create car</h3>
        <hr class="w-25" />
        <form id="Car" action="/Car/AdminCreateCar" method="post"
              class="form-group mt-3 container-fluid justify-content-center text-center w-25">
            <div>
                <label>Select reg.number</label>
                <input asp-for="@Model.RegNumber" class="form-control" placeholder="Reg.number">
                <span asp-validation-for="@Model.RegNumber" class="text-danger"></span>
            </div>

            <div class="mt-5 mb-2">
                <label>Select car brand</label>
                <select asp-for="@Model.CarBrand" class="form-control">
                    <option selected disabled>-- Select car brand --</option>
                    @foreach (var item in Model.CarBrands)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <div class="button-holder mt-5">
                <button type="submit" class="staticbtn btn btn-outline-primary">Create car</button>
            </div>
        </form>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>



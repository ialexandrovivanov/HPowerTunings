@using  HPowerTunings.ViewModels.CarModels
@model AdminCreateCarOutputModel
@{
    ViewData["Title"] = "AdminCreateCar";
    Layout = "~/Views/Shared/_LayoutBoss.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        body {
            background-color: rgb(242, 242, 232)
        }
    </style>
</head>

<body>
    <h3 class="pt-5">Create repair</h3>
    <form id="Car" action="/Repair/CreateRepair" method="post"
          class="form-group mt-3 container-fluid justify-content-center text-center w-25">
        <label>Select car</label>
        <input asp-for="@Model.CarBrand" class="form-control" placeholder="Reg.number">
        <span asp-validation-for="@Model.CarBrand" class="text-danger"></span>
       
        <label>Select car brand</label>
        <select asp-for="@Model.CarBrand" class="form-control">
            <option selected disabled>-- Select car brand --</option>
            @foreach (var item in Model.CarBrands)
            {
                <option value="@item">@item</option>
            }
        </select>

        <div class="button-holder mt-4">
            <button type="submit" class="btn btn-outline-primary">Create repair</button>
        </div>
    </form>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>


